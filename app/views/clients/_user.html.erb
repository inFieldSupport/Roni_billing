


<tr class="">

<td class="border-b border-slate-100 dark:border-slate-700 p-1  text-black font-semibold"><%= user.user_type%></td>
<td class="border-b border-slate-100 dark:border-slate-700 p-1 text-slate-500 dark:text-slate-400">

    <%= form_with(model: user,data:{turbo:false}) do |f| %>
        <div class="flex" >
    <%= f.number_field :user_rate,value:user.user_rate ,step: 0.01,id:"user-rate-#{user.id}",class:"w-16 border-transparent text-sm rounded-lg even:bg-gray-100 ",disabled:true %>
    <%=button_tag "Edit",type:"button",id:"user-rate-button-#{user.id}",onclick:"userRateFunction(#{user.id})",class:"text-indigo-600 hover:bg-indigo-600 hover:text-white p-2  rounded-md text-white mr-2" %> 
<%= f.submit "Save", id:"user-rate-save-#{user.id}",class:"ml-2 bg-indigo-600  hover:bg-indigo-700 p-2  rounded-md text-white mr-2 hidden" %>
<%=button_tag "X",type:"button",id:"user-rate-undo-#{user.id}",onclick:"undoUserRate(#{user.id})",class:"bg-white border border-indigo-600 hover:bg-indigo-700 hover:text-white p-2  rounded-md text-indigo-600 mr-2 hidden" %> 
</div>
<%end%>
</td>
<td class="border-b border-slate-100 dark:border-slate-700 p-1 text-slate-500 dark:text-slate-400 text-center"><%= user.registered_users %></td>
<td class="border-b border-slate-100 dark:border-slate-700 p-1 text-slate-500 dark:text-slate-400">
<%= form_with(model: user,data:{turbo:false}) do |f| %>   
<div class="flex">
    <%= f.number_field :active_users,value:user.active_users ,id:"user-active-#{user.id}",class:"mr-2 border-transparent rounded-md text-sm w-14 ",disabled:true %>
    
    <%=button_tag "Edit",type:"button",id:"user-active-button-#{user.id}",onclick:"userActiveFunction(#{user.id})",class:"text-indigo-600 hover:bg-indigo-600 hover:text-white p-2  rounded-md text-white " %> 
<%= f.submit "Save", id:"user-active-save-#{user.id}",class:"ml-2 bg-indigo-600  hover:bg-indigo-700 p-2  rounded-md text-white mr-2 hidden" %>
<%=button_tag "X",type:"button",id:"user-active-undo-#{user.id}",onclick:"undoUserActive(#{user.id})",class:"bg-white border border-indigo-600 hover:bg-indigo-700 hover:text-white p-2  rounded-md text-indigo-600 mr-2 hidden" %> 
</div>
<%end%>

    
</td>
<td class="border-b border-slate-100 dark:border-slate-700 p-1 text-slate-500 dark:text-slate-400 text-center"><%= ((user.active_users)*(user.user_rate)).round(2) %></td>

  


</tr>


