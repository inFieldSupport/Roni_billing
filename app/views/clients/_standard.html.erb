
<tr class="">

<td class="border-b border-slate-100 dark:border-slate-700 p-1  text-black font-semibold"><%= standard.standard_type%></td>
<td class="border-b border-slate-100 dark:border-slate-700 p-1 text-slate-500 dark:text-slate-400">
    
<%= form_with(model: standard,data:{turbo:false}) do |f| %>
    <div class="flex" >
<%= f.number_field :standard_rate,value:standard.standard_rate ,step: 0.01,id:"standard-rate-#{standard.id}",class:"w-16 border-transparent text-sm rounded-lg even:bg-gray-100 ",disabled:true %>
<%=button_tag "Edit",type:"button",id:"standard-rate-button-#{standard.id}",onclick:"standardRateFunction(#{standard.id})",class:"text-indigo-600 hover:bg-indigo-600 hover:text-white p-2  rounded-md text-white mr-2" %> 
<%= f.submit "Save", id:"standard-rate-save-#{standard.id}",class:"ml-2 bg-indigo-600  hover:bg-indigo-700 p-2  rounded-md text-white mr-2 hidden" %>
<%=button_tag "X",type:"button",id:"standard-rate-undo-#{standard.id}",onclick:"undoStandardRate(#{standard.id})",class:"bg-white border border-indigo-600 hover:bg-indigo-700 hover:text-white p-2  rounded-md text-indigo-600 mr-2 hidden" %> 
</div>
<%end%>
    
</td>

<td class="border-b border-slate-100 dark:border-slate-700 p-1 text-slate-500 dark:text-slate-400">
<%= form_with(model: standard,data:{turbo:false}) do |f| %>
<div class="flex">
<%= f.number_field :active_users,value:standard.active_users ,id:"standard-active-#{standard.id}",class:"mr-2 border-transparent rounded-md text-sm w-14 ",disabled:true %>

<%=button_tag "Edit",type:"button",id:"standard-active-button-#{standard.id}",onclick:"standardActiveFunction(#{standard.id})",class:"text-indigo-600 hover:bg-indigo-600 hover:text-white p-2  rounded-md text-white " %> 
<%= f.submit "Save", id:"standard-active-save-#{standard.id}",class:"ml-2 bg-indigo-600  hover:bg-indigo-700 p-2  rounded-md text-white mr-2 hidden" %>
<%=button_tag "X",type:"button",id:"standard-active-undo-#{standard.id}",onclick:"undoStandardActive(#{standard.id})",class:"bg-white border border-indigo-600 hover:bg-indigo-700 hover:text-white p-2  rounded-md text-indigo-600 mr-2 hidden" %> 
</div>
<%end%>
    
</td>
<td class="border-b border-slate-100 dark:border-slate-700 p-1 text-slate-500 dark:text-slate-400 text-center"><%= ((standard.active_users)*(standard.standard_rate)).round(2) %></td>

  


</tr>
