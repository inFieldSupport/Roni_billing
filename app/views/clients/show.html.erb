<div class="flex flex-col  bg-gray-100 rounded-lg " style="max-height:91vh;height:91vh;margin-bottom:20px">

   <%= render "clients/client_info" %>

    <div class=" flex justify-center mx-2 mt-4 bg-white p-4 rounded-t-lg" style="height:75%">
        
            <div class=" flex flex-col justify-between w-1/2  mx-2 bg-white  rounded-lg ">
            <%= render "clients/users" %>
            </div>
            <div class=" flex flex-col justify-between w-1/2  mx-2 bg-white  rounded-lg ">
            <%= render "clients/standards" %>
            </div>
            
    </div>
    <div class="flex flex-col">
            <%= render "clients/total" %>
            </div>
   
 
   <div class="flex justify-center text-center items-center bg-white mb-10 p-2" style="margin: 0 7px 2rem 7px">
  
    <%if true %>
    <h1 class="text-xl font-semibold mr-2">Create the client's bill ?</h1>
   <%= button_to "Create",bills_path(client_id:@client.id,employee_id:current_user.id),class:"bg-indigo-600 rounded-md ml-2 text-white p-2" %>
   <%else%>
   <h1 class="text-xl font-semibold mr-2">Bill Already Created</h1>
   <%= link_to "View",@client.bill,class:"bg-indigo-600 rounded-md ml-2 text-white p-2" %>
   <% end%>
   </div>
  
</div>