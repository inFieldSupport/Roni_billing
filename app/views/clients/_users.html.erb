
            <header class="h-1/8 px-5 py-4 border-b border-gray-100  bg-gradient-to-r from-blue-700 to-blue-500 rounded-t-lg">
                <h2 class="font-semibold text-white mt-2">Users</h2>
              
            </header>
            <div class="p-3 h-3/4 overflow-y-auto">
              
                    <table class="table w-full border-spacing-y-4  border-separate " >
                        <thead class="text-xs font-semibold uppercase text-white bg-blue-700">
                            <tr>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-left">Type</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-left">Rate</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-left">Registered</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-center">Active</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                <div class="font-semibold text-center">Total Amount</div>
                            </th>
                            </th>
                            <th class="p-2 whitespace-nowrap">
                            <div class="font-semibold text-center"></div>
                        </th>
                            </tr>
                        </thead>
                        <tbody class="text-sm divide-y divide-gray-100">
                        <% @users.each do |user| %>
                            <tr >
                                <td class="p-2 whitespace-nowrap mt-4">
                                    <div class="flex items-center">
        
                                        <div class="font-medium text-gray-800"><%= user.user_type%></div>
                                    </div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="text-left"><%= user.user_rate%>$</div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="text-center ">N/A</div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <div class=" text-center text-sm">
                                    <%= user.active_users %>
                                    </div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                <div class=" text-center text-sm">
                                <%= ((user.active_users)*(user.user_rate)).round(2) %> $
                                </div>
                            </td>
                            <td class="p-2 whitespace-nowrap">
                            <div class=" text-center text-sm">
                            <%=link_to "Edit",root_path,class:"bg-blue-700 p-2  rounded-xl text-white mr-2" %> 
                            </div>
                        </td>
                            </tr>
                            
                            <%end%>
                    </tbody>
                    </table>
               
            </div>
            <footer class="h-1/8 flex justify-between px-5 py-4 border-b border-gray-100 bg-gradient-to-r from-blue-700 to-blue-500 rounded-b-lg">
            <h2 class="font-semibold text-white mt-2">Total</h2>
            <h2 class="font-semibold text-white mt-2"><%= @users_bill %> $</h2>
          
        </footer>