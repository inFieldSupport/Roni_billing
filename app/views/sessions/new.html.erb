
<div class=" flex flex-col justify-center  items-center bg-gray-100 mt-20 ">
    <div>
    <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900 mb-8">Sign in to your account</h2>
    </div>
 
                        <%= form_for(:session,data:{turbo:false},class:"w-1/2 mt-10 items-center ") do |f| %>
                            <div class="items-center" style="margin-left:18%">
                            <%= f.label :email %>
                            <%= f.email_field :email, placeholder:"example@gmail.com", class:" w-3/4 mt-1 block w-full border-none bg-white h-11 rounded-xl shadow-lg hover:bg-gray-100 focus:bg-grey-100 focus:ring-0" %>
                            </div>

                            <div class="mt-7 " style="margin-left:18%">
                            <%= f.label :password %>
                            <%= f.password_field :password, placeholder:"******", class:" w-3/4 mt-1 block w-full border-none bg-white h-11 rounded-xl shadow-lg hover:bg-gray-100 focus:bg-gray-100 focus:ring-0" %>
                            </div>
                            <div class="mt-7 text-center">
                            <%= f.submit 'Sign in', class:" w-1/2 bg-orange-400 w-full py-3 my-6 rounded-xl text-white shadow-xl hover:shadow-inner focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-105" %>
                            </div>
                        <% end %>
       
  </div>
