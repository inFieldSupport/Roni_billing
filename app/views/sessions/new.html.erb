<div class="font-sans mx-2">
            <div class="relative min-h-screen flex flex-col sm:justify-center items-center bg-gray-100 ">
                <div class="relative sm:max-w-sm w-full">
                    <div class="card bg-orange-400 shadow-lg  w-full h-full rounded-3xl absolute  transform -rotate-6"></div>
                    <div class="card bg-black shadow-lg  w-full h-full rounded-3xl absolute  transform rotate-6"></div>
                    <div class="relative w-full h-full rounded-3xl  px-6 py-4 bg-gray-100 shadow-md">
                        <label for="" class="block mt-3 text-lg my-4 text-gray-700 text-center font-semibold">
                            Login
                        </label>

                        <%= form_for(:session,data:{turbo:false},class:"mt-10") do |f| %>
                            <div>
                            <%= f.label :email %>
                            <%= f.text_field :email, placeholder:"example@gmail.com", class:"mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-orange-100 focus:bg-orange-100 focus:ring-0" %>
                            </div>

                            <div class="mt-7">
                            <%= f.label :password %>
                            <%= f.password_field :password, placeholder:"******", class:"mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-orange-100 focus:bg-orange-100 focus:ring-0" %>
                            </div>
                            <div class="mt-7">
                            <%= f.submit 'Sign in', class:"bg-orange-400 w-full py-3 my-6 rounded-xl text-white shadow-xl hover:shadow-inner focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-105" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>